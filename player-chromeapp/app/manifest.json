{
  "manifest_version": 2,
  "name": "Reach.Network Player",
  "description": "Reach.Network | TV Ad Network Player",
  "author":  {
    "email": "hookup@reach.network"
  },  
  "version": "1.0",
  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },  
  "app": {
    "background": {
      "scripts": ["main.js"]
    }   
  },  
  "kiosk_enabled": true,
  "permissions": [
    "app.window",
    "<all_urls>",
    "fileSystem",
    "fullscreen",
    "geolocation",
    "power",
    "storage",
    "unlimitedStorage",
    "webview",
    "system.display",
    "serial",
    { "socket" : ["tcp-listen"] }
  ]
}

